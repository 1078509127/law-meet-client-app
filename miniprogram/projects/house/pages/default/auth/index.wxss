/* //轮播图 */
.wrap { 
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.wrap .img-wrap { 
  font-size: 30rpx;
  color: #33373E;
  margin-top: 30rpx;
}
.wrap .img-wrap .txt { 
  margin-bottom: 20rpx;
  margin-top: 40rpx;
 
}
.wrap .img-wrap .imglist { 
  display: flex;
  flex-wrap: wrap;
}
.wrap .img-wrap .imglist .item { 
  width: 320rpx;
  height: 200rpx;
  margin-right: 12.5rpx;
  margin-left: 12.5rpx;
  margin-bottom: 10rpx;
  position: relative;
  
}
.wrap .img-wrap .imglist .last-item { 
  width: 320rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  border: 2rpx dashed #8B97A9;
  box-sizing: border-box;
  margin-left: 12.5rpx;
  background-color: rgb(253, 247, 247);
}
.wrap .img-wrap .imglist .item image { 
  width: 100%;
  height: 100%;
}
.wrap .img-wrap .imglist .item .delete { 
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -14rpx;
  right: -12rpx;
}